<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".main.fragments.SearchFragment">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/fsSearchSongArtistSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:queryHint="@string/search_songs_artists"
        android:background="@drawable/secondary_white_stroked_transparent_bg"
        app:iconifiedByDefault="false" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fsSearchResultsContainerRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>